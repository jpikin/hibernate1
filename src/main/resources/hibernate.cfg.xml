<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Подключение к PostgreSQL -->
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5434/postgres</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">admin</property>

        <!-- Диалект для PostgreSQL -->
        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Показывать SQL -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <!-- Создавать/обновлять схему -->
        <property name="hbm2ddl.auto">validate</property>

        <!-- Регистрация сущности -->
        <mapping class="hibernate1lection.entity.Person"/>
        <mapping class="hibernate1lection.entity.Pet"/>
    </session-factory>
</hibernate-configuration>